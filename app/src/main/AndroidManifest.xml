<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hpuser.stockmanager">

    <uses-feature
        android:name="android.hardware.Camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/image000"
        android:label="@string/app_name"
        android:roundIcon="@drawable/image000"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/noBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Stock_Manager"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Add_Items"
            android:screenOrientation="portrait" />
        <activity android:name=".Model" />
        <activity android:name=".ViewItem" />
        <activity android:name=".Delete_Activity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>